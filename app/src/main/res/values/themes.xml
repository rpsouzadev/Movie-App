<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_default</item>
        <item name="colorSecondaryVariant">@color/color_default</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="ThemePrimaryButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ThemeSecondaryButton">
        <item name="android:background">@drawable/bg_border_red_full</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ThemeTertiaryButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_default</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ThemeEditText">
        <item name="android:background">@drawable/bg_edit</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/urbanist_600</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="ThemeToolbarSimpleSearchView">
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="SearchViewTheme">
        <item name="colorSecondary">@color/text_primary</item>
        <item name="searchBackground">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="hintColor">#33212121</item>
        <item name="backIconTint">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="iconsTint">@color/text_primary</item>
    </style>

    <style name="CustomTabLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/urbanist_600</item>
    </style>

    <style name="SearchViewThemeScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/gray_hint</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:editTextColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlActivated">@color/text_primary</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.MinWidth">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>